<Window x:Class="nvtweak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="nvtweak"
        Height="1080"
        Width="1920"
        Background="#111111"
        Foreground="White"
        FontSize="16"
        FontFamily="assets/fonts/JetBrainsMono-Regular.ttf#JetBrains Mono">

    <DockPanel>
        <TabControl Margin="10" Background="#111111" BorderThickness="0">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="Background" Value="#111111"/>
                    <Setter Property="BorderBrush" Value="#111111"/>
                    <Setter Property="BorderThickness" Value="1,1,1,0"/>
                    <Setter Property="Padding" Value="5,1"/>
                    <Setter Property="Margin" Value="0,0,2,0"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border Name="Border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="4,4,0,0"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter x:Name="ContentSite"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      ContentSource="Header"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#333333"/>
                                        <Setter TargetName="Border" Property="BorderBrush" Value="#333333"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#333333"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>

                <Style TargetType="TabControl">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabControl">
                                <DockPanel>
                                    <TabPanel x:Name="HeaderPanel" DockPanel.Dock="Top" IsItemsHost="True" Background="#111111" Margin="0,0,0,0"/>

                                    <Border Name="ContentPanel" Background="#111111" BorderBrush="#444444" BorderThickness="1" CornerRadius="0,4,4,4" Padding="10" >
                                        <ContentPresenter x:Name="PART_SelectedContentHost" ContentSource="SelectedContent"/>
                                    </Border>
                                </DockPanel>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </TabControl.Resources>

            <TabItem Header="REGISTRY">
                <DockPanel Background="#111111">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10">
                        <StackPanel>

                            <TextBox x:Name="SearchBar"
                         Height="35"
                         Background="#111111"
                         Foreground="White"
                         BorderBrush="#333333"
                         Margin="0,0,0,10"
                         Width="1076"/>

                            <TreeView x:Name="DwordTreeView"
                          Background="#111111"
                          Foreground="White"
                          MinHeight="0"
                          MaxHeight="400"
                          Margin="0,0,0,10"/>

                            <Grid Height="200" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="320"/>
                                    <ColumnDefinition Width="20"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="40"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Binary:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="10,0"/>
                                <TextBox x:Name="BinaryResultTextBox"
                             Height="35"
                             Width="320"
                             Background="#111111"
                             Foreground="White"
                             Text="00000000000000000000000000000000"
                             BorderBrush="#333333"
                             IsReadOnly="True"
                             Grid.Row="0" Grid.Column="1"/>

                                <TextBlock Text="Decimal:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="10,0"/>
                                <TextBox x:Name="DecimalResultTextBox"
                             Height="35"
                             Width="320"
                             Background="#111111"
                             Foreground="White"
                             Text="0"
                             BorderBrush="#333333"
                             IsReadOnly="True"
                             Grid.Row="1" Grid.Column="1"/>

                                <TextBlock Text="Max value:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Top" Margin="10,12,10,0"/>
                                <TextBox x:Name="MaxValueTextBox"
                                 Height="35"
                                 Text="0x00000000"
                                 Width="320"
                                 Background="#111111"
                                 Foreground="White"
                                 BorderBrush="#333333"
                                 IsReadOnly="True"
                                 Grid.Row="3" Grid.Column="1" Margin="0,5,0,0"/>

                                <TextBox x:Name="SetAllToValueTextBox"
                                         MaxWidth="140"
                                         Visibility="Hidden"
  Background="#111111"
  Foreground="White"
  BorderBrush="#333333"
  Grid.Row="4" Grid.Column="4" Margin="73,7,10,0"/>

                                <TextBlock Text="Hex:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="10,0"/>
                                <TextBox x:Name="HexResultTextBox"
                             Height="35"
                             Width="320"
                             Background="#111111"
                             Foreground="White"
                             Text="0x00000000"
                             BorderBrush="#333333"
                             IsReadOnly="True"
                             Grid.Row="2" Grid.Column="1"/>

                                <Button x:Name="SearchButton"
                            Height="35"
                            Content="Search"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="0" Grid.Column="3" Margin="11,2,10,2"
                            Click="SearchButton_Click"/>


                                <Button x:Name="SetAllToValueButton"
                                        Visibility="Hidden"
Content="Set all options to value"
Background="#111111"
Foreground="White"
BorderBrush="#333333"
Grid.Row="4" Margin="11,7,164,0"
Click="SetAllToValueButton_Click" Grid.ColumnSpan="2" Grid.Column="3"/>

                                <Button x:Name="ApplyToRegistryButton"
                            Height="36"
                            Content="Apply To Registry"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="1" Grid.Column="3" Margin="11,2,10,2"
                            Click="ApplyToRegistryButton_Click"/>

                                <Button x:Name="CalculateBitmaskButton"
                            Height="35"
                            Content="Calculate Bitmask"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="0" Grid.Column="4" Margin="10,2,10,2"
                            Click="CalculateValueButton_Click"/>

                                <Button x:Name="SaveToRegFileButton"
                            Height="35"
                            Content="Save to .reg file"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="1" Grid.Column="4" Margin="10,2,10,2"
                            Click="SaveToRegFileButton_Click"/>

                                <Button x:Name="ExportDwordsFromDocumentationButton"
                            Content="Export dwords from documentation"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="3" Grid.Column="3"
                            Grid.ColumnSpan="2"
                            Margin="11,10,10,38"
                            Click="ExportDwordsFromDocumentationButton_Click" Grid.RowSpan="2"/>

                                <Button x:Name="ShowDescriptionButton"
                            Height="36"
                            Content="Show Description"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="2" Grid.Column="3"
                            Margin="10,5,11,39"
                            Click="ShowDescriptionButton_Click" Grid.RowSpan="2"/>

                                <Button x:Name="ExtractOptionsFromValue"
                            Height="36"
                            Content="Options from value"
                            Background="#111111"
                            Foreground="White"
                            BorderBrush="#333333"
                            Grid.Row="2" Grid.Column="4"
                            Margin="10,4,10,0"
                            Click="ExtractOptionsFromValue_Click"/>

                                <Button x:Name="ShowOptionsUsed"
                                Visibility="Hidden"
                                Height="36"
                                Content="Show Options"
                                Background="#111111"
                                Foreground="White"
                                BorderBrush="#333333"
                                Grid.Row="2" Grid.Column="4"
                                Margin="249,9,-268,35"
                                Click="ShowOptionsUsed_Click" Grid.RowSpan="2"/>

                                <TextBox x:Name ="DwordNameTextBox"
                                 Visibility="Hidden"
                                 Text="Name"
                                 Height="35"
                                 MaxWidth="240"
                                 Background="#111111"
                                 Foreground="#444444"
                                 BorderBrush="#333333"
                                 Grid.Column="4"
                                 Margin="239,9,-277,36" Grid.RowSpan="2" GotFocus="DwordNameTextBox_GotFocus" LostFocus="DwordNameTextBox_LostFocus"/>

                                <TextBox x:Name ="DwordValueTextBox"
                                 Visibility="Hidden"
                                 Height="35"
                                 MaxWidth="240"
                                 Text="Value"
                                
                                 Background="#111111"
                                 Foreground="#444444"
                                 BorderBrush="#333333"
                                 Grid.Column="4"
                                 Margin="239,10,-277,35" Grid.Row="1" Grid.RowSpan="2" GotFocus="DwordValueTextBox_GotFocus" LostFocus="DwordValueTextBox_LostFocus"/>

                                <TextBox 
                                    Visibility="Hidden"
                                    x:Name="OptionsTextBox"
                                    MinHeight="190"
                                    MaxHeight="180"
                                    MinWidth="650"
                                    MaxWidth="400"
                                    Foreground="White" 
                                    Background="#111111"
                                    BorderBrush="#333333"
                                    IsReadOnly="True"
                                    TextWrapping="Wrap"
                                    Grid.Column="4" Margin="521,3,-950,37" Grid.RowSpan="6"></TextBox>
                            </Grid>


                            <TextBlock Text="Description:" Margin="10,0"/>
                            <TextBox x:Name="Description_Textbox"
                             Height="300"
                             Background="#111111"
                             Foreground="White"
                             BorderBrush="#333333"
                             AcceptsReturn="True"
                             IsReadOnly="True"
                             TextWrapping="Wrap"></TextBox>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </TabItem>


            <TabItem Header="NVAPI">
                <Canvas>
                    <TextBox Text="Coming Soon.."
                             BorderThickness="0"
                             IsReadOnly="True"
                             Height="20"
                             Width="150"
                             Background="#111111"
                             Foreground="White"/>
                </Canvas>
            </TabItem>

            <TabItem Header="ABOUT"/>
        </TabControl>
    </DockPanel>
</Window>
